  <groupId>com.cloudbees.nectar.plugins</groupId>
  <artifactId>cloudbees-label-throttling-plugin</artifactId>
  <version>3.4</version>
  <packaging>hpi</packaging>

  <name>CloudBees Label Throttling Plugin</name>
  <description>
    This plugin allows you to define a limit to the number of concurrent builds on a group of slaves.
    You can group slaves together, then assign a limit that specifies how many concurrent builds can
    happen on the slaves that belong to that group. In this way, you can avoid overloading your
    hypervisor host machine.
  </description>
  <url>http://release-notes.cloudbees.com/product/Label+Throttle+Plugin</url>

  <scm>
    <connection>scm:git:ssh://git@github.com/cloudbees/cloudbees-label-throttling-plugin.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/cloudbees/cloudbees-label-throttling-plugin.git</developerConnection>
    <tag>cloudbees-label-throttling-plugin-3.4</tag>
  </scm>

  <properties>
    <maven.findbugs.failure.strict>true</maven.findbugs.failure.strict>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.cloudbees.nectar.plugins</groupId>
      <artifactId>nectar-license</artifactId>
      <version>5.7</version>
    </dependency>
  </dependencies>

</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.cloudbees.jenkins.plugins</groupId>
    <artifactId>jenkins-plugins</artifactId>
    <version>16</version>
  </parent>

  <groupId>com.cloudbees.nectar.plugins</groupId>
  <artifactId>cloudbees-even-scheduler</artifactId>
  <version>3.3</version>
  <packaging>hpi</packaging>

  <name>CloudBees Even Scheduler Plugin</name>
  <description>
    This plugin provides an alternative job scheduler that can be enabled to force jobs to run on idle nodes in preference to the previous node the job ran on. This is useful where jobs always hit stressed machines while others are sitting idly.
  </description>
  <url>http://release-notes.cloudbees.com/product/Even+Scheduler+Plugin</url>

  <scm>
    <connection>scm:git:ssh://git@git.cloudbees.com/cloudbees/nectar-even-scheduler-plugin.git</connection>
    <developerConnection>scm:git:ssh://git@git.cloudbees.com/cloudbees/nectar-even-scheduler-plugin.git</developerConnection>
  </scm>

  <properties>
    <maven.findbugs.failure.strict>true</maven.findbugs.failure.strict>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.cloudbees.nectar.plugins</groupId>
      <artifactId>nectar-license</artifactId>
      <version>3.1</version>
    </dependency>
  </dependencies>
</project>
